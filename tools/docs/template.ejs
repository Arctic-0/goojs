<html>
<body>
<% for(var classId in classes){
	var c = classes[classId]; %>
	<h1><%=c.name%></h1>
	<p><%=c.description%></p>

	<% if(c.examples.length){ %>
		<h2>Examples</h2>
		<% for(var i=0; i<c.examples.length; i++){ %>
			<p><code><%=c.examples[i];%></code></p>
		<% } %>
	<% } %>

	<h2>Constructor</h2><%

	var params = [];
	for(var i=0; i<c.params.length; i++){
		var param = c.params[i];
		if(param.name.indexOf('.') !== -1){
			continue;
		}
		params.push(param.optional ? '[' + param.name + ']' : param.name);
	} %>
	<p><%=c.name%> ( <%=params.join(' , ')%> )</p>
	<ul>
	<% for(var i=0; i<c.params.length; i++){
		var param = c.params[i]; %>
		<li><%= param.name %> : <%= param.type %></li>
	<% } %>
	</ul>

	<% if(c.staticProperties.length){ %>
		<h2>Static Properties</h2>
		<ul>
		<% for(var propertyId in c.staticProperties){
			var property = c.staticProperties[propertyId];
			%>	<li><%=c.name%>.<%=property.name%> : <%=property.name%></li>
		<% }
		 %></ul>
	<% } %>

	<% if(c.properties.length){ %>
		<h2>Properties</h2>
		<ul>
		<% for(var propertyId in c.properties){
			var property = c.properties[propertyId];
			%>	<li>.<%=property.name%> : <%=property.type%></li>
		<% }
		 %></ul>
	<% } %>

	<% if(c.methods.length){ %>
		<h2>Methods</h2>
		<ul>
		<% for(var methodId in c.methods){
			var method = c.methods[methodId];
			%>	<li>.<%=method.name%>( <%=method.params.map(function(param){ return param.name }).join(' , ')%> )</li>
		<% }
		 %></ul>
	<% } %>

	<% if(c.staticMethods.length){ %>
		<h2>Static Methods</h2>
		<ul>
		<% for(var id in c.staticMethods){
			var method = c.staticMethods[id];
			%>	<li><%=c.name%>.<%=method.name%> ( <%=method.params.map(function(param){ return param.name }).join(' , ')%> )</li>
		<% }
		 %></ul>
	<% } %>
<% } %>
</body>
</html>